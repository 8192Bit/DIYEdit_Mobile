<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.x8192Bit.DIYEdit_Mobile.SaveEditFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/diy_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:onClick="onDIY1Pressed"
            android:rotationX="125"
            android:rotationY="-190"
            android:src="@drawable/diy_1" />

        <ImageButton
            android:id="@+id/diy_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:onClick="onDIY2Pressed"
            android:rotation="77"
            android:rotationX="28"
            android:src="@drawable/diy_2" />

        <ImageButton
            android:id="@+id/diy_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:onClick="onDIY3Pressed"
            android:rotationX="44"
            android:rotationY="20"
            android:src="@drawable/diy_3" />

        <ImageButton
            android:id="@+id/diy_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:onClick="onDIY4Pressed"
            android:rotationX="-133"
            android:rotationY="44"
            android:src="@drawable/diy_4" />

        <ImageButton
            android:id="@+id/diy_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:onClick="onDIY5Pressed"
            android:rotation="-81"
            android:rotationX="44"
            android:src="@drawable/diy_5" />

    </LinearLayout>

    <GridView
        android:id="@+id/ShelfGridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="6" />

</LinearLayout>